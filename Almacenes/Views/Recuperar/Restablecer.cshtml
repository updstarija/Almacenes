
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>UPDS ALMACENES</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/Content/css/style.css" rel="stylesheet" />

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">RESTABLECER CONTRASEÑA</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    @if (ViewBag.Id == -1)
                    {
                        <div class="col-md-7 col-lg-5">
                            <h4 class="text-center">El enlace de recuperación expiro <br>
                            Intente nuevamente
                            </h4>
                        </div>
                    }
                    else if (ViewBag.Id == 0)
                    {
                        <div class="col-md-7 col-lg-5">
                            <h4 class="text-center">El enlace de recuperación es erróneo <br>
                            Intente nuevamente</h4>
                        </div>
                    }
                    else
                    {
                        <div class="login-wrap p-4 p-md-5" id="contenedorExiste">
                            <div class="icon d-flex align-items-center justify-content-center">
                                <span class="fa fa-user-o"></span>
                            </div>
                            <h3 class="text-center mb-4">RESTABLECER CONTRASEÑA</h3>
                            <div class="form-group">
                                <input type="password" class="form-control rounded-left" placeholder="Nueva Contraseña" id="NuevaContra" required>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control rounded-left" placeholder="Repita la Contraseña" id="NuevaContra2" required>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary rounded px-3" onclick="ResetPass()">Cambiar Contraseña</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <a href="@Url.Action("Index","Inicio")">Volver a login</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <script>
        function ResetPass() {
            var Id = @ViewBag.Id;
            $.post('@Url.Action("ResetPass", "Recuperar")', { IdUsuario: Id, NuevaContra: $("#NuevaContra").val(), NuevaContra2: $("#NuevaContra2").val() }, function (s) {
                document.location.href = 'https://localhost:44397/';
            })
        }

    </script>
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/popper.min.js"></script>
    <script src="~/Content/js/popper.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/main.js"></script>
</body>
</html>
