
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-4 bg-light">
    <h2>Bienvenido</h2>
    <div class="row" id="cuerpoNotificaciones">

    </div>
</div>

<script>
    $(document).ready(function () {
        Notifications();
    });

    function Notifications() {
        $("#cuerpoNotificaciones").html("");
        $.getJSON('@Url.Action("Notifications", "HomeUsuario")', function (o) {
            $("#cuerpoNotificaciones").html(o);
        });
    }
</script>